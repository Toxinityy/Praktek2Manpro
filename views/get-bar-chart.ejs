  body {
    background-color: #fff9e3;
    overflow-x: hidden;
  }
  section{
    position: relative;
    top: 25px;
    left: 50px;
  }
  form{
    display: flex;
    flex-direction: row;
    width: 25%;
  }
  label{
    margin-right: 10px;
    margin-left: 10px;
  }
  div[class="dropdown-section"]{
    position: relative;
    top: 20px;
  }
  input[type="submit"]{
    position: relative;
    margin-left: 10px;
  }
  section[class="table"]{
    margin-top: 40px;
    margin-left: 10px;
    width: 800px;
    height: 400px;
  }
  
